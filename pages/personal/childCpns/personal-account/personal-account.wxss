.personal-account{
    display: flex;
}
.account-item{
    flex: 1;
    text-align: center;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    border-right: 1px solid #f2f2f2;
}
.account-item-title{
    font-size: 24rpx;
    color: #666666;
    padding-bottom: 10rpx;
}
.account-item-desc{
    font-size: 26rpx;
    color: #666666;
}
.account-item-title-number{
    font-weight: 700;
    font-size: 36rpx;
    color: #ff8198;
    margin-right: 8rpx;
}