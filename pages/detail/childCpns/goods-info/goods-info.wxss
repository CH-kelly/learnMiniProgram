/* pages/detail/childCpns/goods-info/goods-info.wxss */
.goods-info{
    /*padding: 20px 10px 20px 10px;*/
    font-size: 26rpx;
    color: #666666;
    margin-bottom: 20rpx;
    border-bottom: 10rpx solid #f2f2f2;
}
.goods-info-desc{
    padding: 20px 10px 20px 10px;
}
.goods-info-desc-start{
    margin-bottom: 10rpx;
    width: 300rpx;
    height: 1px;
    background-color: #a3a3a5;
    position: relative;
}
.goods-info-desc-start::before{
    content: "";
    display: block;
    width: 10rpx;
    height: 10rpx;
    background-color: #000000;
    position: absolute;
    bottom: 0;
}
.goods-info-desc-end{
    margin-top: 10rpx;
    float: right;
    width: 300rpx;
    height: 1px;
    background-color: #a3a3a5;
    position: relative;
}
.goods-info-desc-end::after{
    clear: both;
    content: "";
    display: block;
    width: 10rpx;
    height: 10rpx;
    background-color: #000000;
    position: absolute;
    bottom: 0;
    right: 0;
}

.item-key{
    padding: 20rpx;
}
.item-image{
    width: 100%;
}