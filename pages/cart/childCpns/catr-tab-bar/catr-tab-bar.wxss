.cart-tab-bar{
    width: 100vw;
    display: flex;
    background-color: #f2f2f2;
    box-shadow: 0px -1px 1px rgba(0,0,0,0.2);
    position: fixed;
    bottom: 0;
}
.tab-bar-left{
    display: flex;
    align-items: center;
    width: 25%;
    text-align: center;
    line-height: 80rpx;
    padding-left: 20rpx;
}
.tab-bar-center{
    width: 45%;
    line-height: 80rpx;
}
.tab-bar-right{
    width: 30%;
    color: #ffffff;
    background-color: #ff8198;
    text-align: center;
    line-height: 80rpx;
}